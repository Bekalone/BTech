<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificationFragment">

    <TextView
        android:id="@+id/tv_register2"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="@string/register"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_kod_saved"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_register2"
        android:text="@string/kod_saved"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginTop="125dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_kod_saved"
        android:text="@string/phone_number"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_getNewKod"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_verification"
        android:layout_marginBottom="32dp"
        android:text="@string/getting_kod"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:gravity="center"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/accent"
        android:text="@string/verification"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>